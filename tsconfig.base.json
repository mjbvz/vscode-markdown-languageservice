{
	"compilerOptions": {
		"target": "es2020",
		"lib": [
			"ES2020",
			"DOM"
		],
		"rootDir": "./src",
		"outDir": "./out",
		"declaration": true,
		"module": "commonjs",
		"strict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*"
	]
}