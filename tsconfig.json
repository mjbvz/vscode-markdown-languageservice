{
	"compilerOptions": {
		"target": "es2020",
		"rootDir": "src",
		"outDir": "out",
		"declaration": true,
		"module": "commonjs",
		"strict": true,
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noImplicitOverride": true,
		"noUnusedLocals": true,
		"noUnusedParameters": true,
		"forceConsistentCasingInFileNames": true
	},
	"include": [
		"src/**/*"
	]
}
